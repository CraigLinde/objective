

<table>
  <thead>

  <tr>
    <th>Job</th>
    <th>Applicant Name</th>
    <th>Email Address</th>
    <th>Website</th>
    <th>Skills</th>
    <th>Cover Letter Paragraph</th>
  </tr>
</thead>
<% @rowspan = []%>
<% @jobs.each do |j| %>
  <% @count = 0%>
  <% @applicants.each do |a| %>
    <%@count +=1 if j.id == a.job_id%>
  <%end%>
  <%@rowspan.push @count%>
<%end%>
<tbody>
    <% @jobs.each do |i| %>
    <tr>
      <td rowspan= <%= @rowspan[i.id - 1]%> class = "job"><%= i.name %></td>
        <% @applicants.each do |applicant| %>
          <% if applicant.job_id == i.id %>
          <td><%= applicant.name %></td>
          <td><a href="mailto:<%= applicant.email %>"a><%= applicant.email %></a></td>
          <td><a href=<%= applicant.website %>><%= applicant.website %></a></td>
          <td>
            <% @skills.each do |s| %>
              <% if s.applicant_id == applicant.id %>
              <%= s.name %>
              <br>
              <%end%>
            <%end%>
          </td>
          <td><%= applicant.cover_letter %></td>
    </tr>
          <%end%>
        <%end%>
    <%end%>
</tbody>

</table>
<table class = "foot">
      <tr COLSPAN = "20">
    <td>
    <%= "#{@appcount} Applicants and #{@skillcount} Unique Skills"%>
    </td>
    </tr>
